<!-- app/views/pages/contact.html.erb -->
<section class="max-w-3xl mx-auto px-6 py-16 text-center">
  <h1 class="text-2xl font-bold mb-2">Contacto</h1>
  <p class="text-gray-600 mb-8">
    ¿Quieres colaborar conmigo o saber más?
  </p>

  <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
    <%= link_to "LinkedIn",
      "https://www.linkedin.com/in/loldlm1",
      target: "_blank", rel: "noopener",
      class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-gray-300 bg-white hover:bg-gray-100" %>

    <%= mail_to "loldlm1@gmail.com",
      "Enviar Email",
      subject: "Consulta desde el portafolio",
      body: "Hola Moises, me gustaría hablar sobre...",
      class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700" %>
  </div>

  <p class="mt-6 text-xs text-gray-500">
    Tip: el botón de Email usa <code>mailto:</code> y abrirá tu cliente de correo.
  </p>
</section>
