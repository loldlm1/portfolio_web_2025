<h2 class="text-2xl font-bold mb-6">Iniciar Sesión</h2>

<%# Errores específicos del recurso (en sesiones casi no se usan, pero sirve si los hubiera) %>
<%= render "shared/errors", object: resource %>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name),
              html: { class: "space-y-6" }) do |f| %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: field_classes(resource,
          "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500",
          :email) %>
    <%= field_error_text(resource, :email) %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password",
        class: field_classes(resource,
          "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500",
          :password) %>
    <%= field_error_text(resource, :password) %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :remember_me, class: "mr-2" %>
    <%= f.label :remember_me, class: "text-sm text-gray-600" %>
  </div>

  <div>
    <%= f.submit "Entrar", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
  </div>
<% end %>
