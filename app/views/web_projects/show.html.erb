<div class="max-w-3xl mx-auto p-6 space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold"><%= @web_project.title %></h1>
    <div class="flex gap-3">
      <% if user_signed_in? %>
        <%= link_to "Editar", edit_web_project_path(@web_project), class: "px-3 py-2 rounded-lg border" %>
      <% end %>

      <%= link_to "Volver", root_path, class: "px-3 py-2 rounded-lg border" %>
    </div>
  </div>

  <% if @web_project.image.attached? %>
    <%= image_tag @web_project.image.variant(resize_to_limit: [1200, 800]), class: "w-full rounded-xl" %>
  <% end %>

  <div class="space-y-4 leading-relaxed">
    <%= md(@web_project.description) %>
  </div>
</div>
